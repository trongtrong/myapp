<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="a200390.pctruong.com.appthoitrang.Fragment.Fragment_Nam">
    <LinearLayout
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="370sp">
                <ImageView
                    android:id="@+id/img_anhlon"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="350dp" />
                    <LinearLayout
                        android:layout_marginRight="20dp"
                        android:layout_gravity="bottom|right"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:background="#ffff"
                            android:src="@drawable/ic_share_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/img_chiase" />

                        <ImageButton
                            android:id="@+id/img_yeuthich"
                            android:layout_marginLeft="15dp"
                            android:background="#ffff"
                            android:src="@drawable/ic_favorite_border_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </FrameLayout>
               <include layout="@layout/item_phu_content"/>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/img_binhluan"
            android:src="@drawable/message"
            android:layout_weight="80"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <Button
            android:drawableLeft="@drawable/ic_gio"
            android:background="#e9940a"
            android:id="@+id/btn_giohang"
            android:text="Giỏ Hàng"
            android:textColor="#fff"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_muahang"
            android:background="#d51212"
            android:text="Mua Hàng"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
